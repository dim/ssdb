include ../../build_config.mk

CFLAGS += -I../../deps/${LEVELDB}/include -I../../deps/jemalloc-3.3.1/include

OBJS = log.o fde.o config.o bytes.o sha1.o
EXES =

all: ${OBJS}

log.o: log.h log.cpp
	g++ ${CFLAGS} -c log.cpp

config.o: config.h config.cpp
	g++ ${CFLAGS} -c config.cpp

fde.o: fde.h fde.cpp fde_select.cpp fde_epoll.cpp
	g++ ${CFLAGS} -c fde.cpp

bytes.o: bytes.h bytes.cpp
	g++ ${CFLAGS} -c bytes.cpp

sha1.o: sha1.h sha1.cpp
	g++ ${CFLAGS} -c sha1.cpp

clean:
	rm -f ${EXES} ${OBJS}

